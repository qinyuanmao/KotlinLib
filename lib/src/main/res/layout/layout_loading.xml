<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="@dimen/common_200dp" android:layout_height="@dimen/common_200dp"
              android:gravity="center"
              android:layout_gravity="center"
              android:orientation="vertical">

    <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/inView"
            android:layout_margin="@dimen/common_12dp"
            android:layout_width="@dimen/common_48dp"
            android:layout_height="@dimen/common_48dp"
            app:indicatorName="LineSpinFadeLoaderIndicator"
            app:indicatorColor="@color/colorPrimary"/>

    <TextView
            android:id="@+id/tvContent"
            android:text="加载中..."
            style="@style/style_textview_base"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>


</LinearLayout>